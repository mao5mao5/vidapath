<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.9.xsd">

    <changeSet id="20251210-ai-runner-01" author="system">
        <createTable tableName="ai_runner">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="runner_name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="description" type="text">
                <constraints nullable="true"/>
            </column>
            <column name="terms" type="text">
                <constraints nullable="true"/>
            </column>
            <column name="supported_image_formats" type="text">
                <constraints nullable="true"/>
            </column>
            <column name="supported_source_types" type="text">
                <constraints nullable="true"/>
            </column>
            <column name="supported_scopes" type="text">
                <constraints nullable="true"/>
            </column>
            <column name="supported_algorithm_types" type="text">
                <constraints nullable="true"/>
            </column>
            <column name="runner_address" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="created" type="timestamp">
                <constraints nullable="true"/>
            </column>
            <column name="updated" type="timestamp">
                <constraints nullable="true"/>
            </column>
            <column name="version" type="bigint">
                <constraints nullable="true"/>
            </column>
        </createTable>
        
        <createIndex indexName="idx_ai_runner_name" tableName="ai_runner">
            <column name="name"/>
        </createIndex>

        <createIndex indexName="idx_ai_runner_runner_name" tableName="ai_runner">
            <column name="runner_name"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>